extends layout
append head
    link(rel="stylesheet" href="/stylesheets/create-post.css")
    link(rel="stylesheet" href="/stylesheets/index.css")
    script(src="/javascripts/create-post.js" type="module")
block content
    div(class="main-post-form")
        form(class="create-post-form")
            input(type="hidden" name='_csrf' value=csrfToken)
            input(type="hidden" name='userId' value=user.id)
            input(type="text" id="title" name="title" placeholder="  Title" required)
            input(type="text" id="imgUrl" name="imgUrl" placeholder="    Insert a Post Image URL here (optional)" )
            div(id="content")
                textarea(type="text" id="content" name="content" placeholder="    Tell us a story." required)
            div(id="dropdown")
                select(name="topicId" id="dropdown" required)
                    option(value="") -- Select a post topic --
                    each topic in topics
                        option(value=topic.id)= topic.name
            div(id="create-post-button")
                button(type="submit") Create a post for #{user.username}
