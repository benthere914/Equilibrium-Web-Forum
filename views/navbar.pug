append head
  link(rel="stylesheet" href="/stylesheets/modal.css")
  link(rel="stylesheet" href="/stylesheets/modal-forms.css")
div.nav-bar
  h1
    a(href="/") Equilibrium
  ul
    if loggedIn
      li
        form(action="/log-out" method="POST")
          input(type="submit" value="Log Out" class="").input
      li
        a(href="/users/:username" ) Profile
    else
      li.sign-up-modal-trigger Sign Up
      li.log-in-modal-trigger Log In
      li
        form(action="/log-in-demo" method="POST")
          input(type="submit" value="Demo" class="")
div(class="log-in-modal")
  div(class="modal-content")
    span(class="close-log-in-modal close-modal") X
    include log-in.pug
div(class="sign-up-modal")
  div(class="modal-content")
    span(class="close-sign-up-modal close-modal") X
    include sign-up.pug
script(src="./javascripts/nav-bar.js")
